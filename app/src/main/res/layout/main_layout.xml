<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="324dp"
        android:layout_height="504dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/text_screen"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:outlineAmbientShadowColor="#858585"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="#C7C7C7"
            android:shadowColor="#737373"
            android:text="0.0"
            android:textAlignment="viewEnd"
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="AC"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_substraction"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="."
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_multiplication"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="X"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_division"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="/"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_result"
            android:layout_width="159dp"
            android:layout_height="80dp"
            android:text="="
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_adittion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            app:layout_column="3"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>